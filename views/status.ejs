<%- include('header') %>

<main class="glass-card" style="max-width: 800px; margin: 2rem auto; padding: 2rem;">
    <h1 style="margin-bottom: 2rem; background: linear-gradient(135deg, var(--primary), var(--secondary)); -webkit-background-clip: text; -webkit-text-fill-color: transparent;">System Status</h1>
    
    <div style="display: grid; gap: 1.5rem;">
        <div style="display: flex; justify-content: space-between; align-items: center; padding: 1.5rem; background: rgba(255,255,255,0.03); border-radius: 12px; border: 1px solid var(--border-color);">
            <div>
                <h3 style="margin: 0; font-size: 1.1rem;">API Gateway</h3>
                <p style="margin: 0.25rem 0 0; font-size: 0.85rem; color: var(--text-secondary);">Global REST API endpoints</p>
            </div>
            <div style="display: flex; align-items: center; gap: 0.5rem; color: #10b981; font-weight: 600;">
                <span style="width: 10px; height: 10px; background: #10b981; border-radius: 50%; display: inline-block; box-shadow: 0 0 10px #10b981;"></span>
                Operational
            </div>
        </div>

        <div style="display: flex; justify-content: space-between; align-items: center; padding: 1.5rem; background: rgba(255,255,255,0.03); border-radius: 12px; border: 1px solid var(--border-color);">
            <div>
                <h3 style="margin: 0; font-size: 1.1rem;">Dashboard UI</h3>
                <p style="margin: 0.25rem 0 0; font-size: 0.85rem; color: var(--text-secondary);">User management interface</p>
            </div>
            <div style="display: flex; align-items: center; gap: 0.5rem; color: #10b981; font-weight: 600;">
                <span style="width: 10px; height: 10px; background: #10b981; border-radius: 50%; display: inline-block; box-shadow: 0 0 10px #10b981;"></span>
                Operational
            </div>
        </div>

        <div style="display: flex; justify-content: space-between; align-items: center; padding: 1.5rem; background: rgba(255,255,255,0.03); border-radius: 12px; border: 1px solid var(--border-color);">
            <div>
                <h3 style="margin: 0; font-size: 1.1rem;">Persistence Layer</h3>
                <p style="margin: 0.25rem 0 0; font-size: 0.85rem; color: var(--text-secondary);">Google Sheets sync engine</p>
            </div>
            <div style="display: flex; align-items: center; gap: 0.5rem; color: #10b981; font-weight: 600;">
                <span style="width: 10px; height: 10px; background: #10b981; border-radius: 50%; display: inline-block; box-shadow: 0 0 10px #10b981;"></span>
                Operational
            </div>
        </div>
    </div>

    <div style="margin-top: 3rem; padding-top: 2rem; border-top: 1px solid var(--border-color);">
        <h2 style="font-size: 1.25rem; margin-bottom: 1rem;">Uptime History</h2>
        <div style="display: flex; gap: 4px; height: 40px;">
            <% for(let i=0; i<30; i++) { %>
                <div style="flex: 1; background: #10b981; border-radius: 2px; opacity: <%= 0.5 + (Math.random() * 0.5) %>;" title="100% uptime"></div>
            <% } %>
        </div>
        <div style="display: flex; justify-content: space-between; font-size: 0.75rem; color: var(--text-secondary); margin-top: 0.5rem;">
            <span>30 days ago</span>
            <span>100% uptime</span>
            <span>Today</span>
        </div>
    </div>
</main>

<%- include('footer') %>
